<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/android_auto_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/android_auto_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/android_auto_title"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/android_auto_trigger_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trigger: Something"
            android:layout_marginRight="10dp"
            android:layout_below="@id/android_auto_title"/>

        <TextView
            android:id="@+id/android_auto_action_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trigger: Something"
            android:layout_below="@id/android_auto_title"
            android:layout_toRightOf="@id/android_auto_trigger_description"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>